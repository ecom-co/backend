{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üßπ Lint & Fix All",
            "type": "shell",
            "command": "pnpm",
            "args": ["lint:fix"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$eslint-stylish"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üîç Lint Check",
            "type": "shell",
            "command": "pnpm",
            "args": ["lint"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$eslint-stylish"]
        },
        {
            "label": "üé® Format Code",
            "type": "shell",
            "command": "pnpm",
            "args": ["format"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üß™ Run Tests",
            "type": "shell",
            "command": "pnpm",
            "args": ["test"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$jest"]
        },
        {
            "label": "üß™ Run Tests (Watch)",
            "type": "shell",
            "command": "pnpm",
            "args": ["test:watch"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": ["$jest-watch"]
        },
        {
            "label": "üß™ Test Coverage",
            "type": "shell",
            "command": "pnpm",
            "args": ["test:cov"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üöÄ Start Development",
            "type": "shell",
            "command": "pnpm",
            "args": ["start:dev"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                "background": {
                    "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                }
            }
            ]
        },
        {
            "label": "üèóÔ∏è Build Project",
            "type": "shell",
            "command": "pnpm",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "üìä Generate Blueprint",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "generate:blueprint"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "üìù Generate Query Configs",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "generate:query-configs"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "üê≥ Docker Compose Up",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "docker-compose.dev.yml", "up", "-d"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üê≥ Docker Compose Down",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "docker-compose.dev.yml", "down"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üì¶ Install Dependencies",
            "type": "shell",
            "command": "pnpm",
            "args": ["install"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîÑ Update Dependencies",
            "type": "shell",
            "command": "pnpm",
            "args": ["update"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîç TypeScript Check",
            "type": "shell",
            "command": "npx",
            "args": ["tsc", "--noEmit"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "üßπ Clean All",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "dist", "node_modules", "coverage"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
